<div id="mobile-nav">
  <nav id="mobile-nav-menu">
    <div class="awesomplete">
      <input placeholder="Search" onclick="initSearch();" id="mobile-search" autocomplete="off" aria-owns="awesomplete_list_1" role="combobox">
      <ul role="listbox" id="awesomplete_list_1" hidden=""></ul>
    </div>
    <% for(name in theme.menu){ %>
      <% if(name == 'about') { %>
        <li class="menu-item">
          <a href="/about" class="mobile-nav-link"><i class="fas fa-info-circle"></i><%= __('menu.' + name) %></a>
        </li>
      <% } else { %>  
        <li class="menu-item">
          <a href="<%- url_for(theme.menu[name]) %>" class="mobile-nav-link"><i class="fas fa-<%= name %>"></i><%= __('menu.' + name) %></a>
        </li>
      <% } %>
    <% } %>
    <div class="mobile-intro"><%= theme.introduce %></div>
  </nav>
</div>
